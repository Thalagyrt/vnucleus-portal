<% content_for :title do %>Edit <%= announcement.to_s %><% end %>

<% content_for :header do %>
    Edit Announcement
<% end %>

<% content_for :breadcrumbs do %>
    <li><%= link_to 'Announcements', [:admin, :communications, :announcements] %></li>
    <li><%= link_to 'New Announcement', [:new, :admin, :communications, :announcement] %></li>
<% end %>

<%= simple_form_for @announcement, url: [:admin, :communications, @announcement], html: { class: 'form-horizontal' } do |f| %>
    <%= f.input :announcement_type, wrapper: :medium_input %>
    <%= f.input :subject, wrapper: :medium_input %>
    <%= f.input :body, input_html: { rows: 10 } %>

    <div class="form-group">
        <div class="col-md-5 col-md-offset-2">
            <%= f.button :submit, 'Save Announcement', data: { disable_with: 'Creating...' }, id: 'announcement_submit', class: 'btn btn-primary' %>
        </div>
    </div>
<% end %>