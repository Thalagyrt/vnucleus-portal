<% content_for :title do %>Sign In<% end %>

<div class="block-header">
    <div class="header-section">
        <h1 class="text-center">Welcome to vNucleus<br><small>Please enter your email and password to sign in.</small></h1>
    </div>
</div>


<%= simple_form_for @session_form, url: [:users, :sessions, :session], html: { id: 'login-form', class: 'form-horizontal' } do |f| %>
    <%= f.input :email, wrapper: :no_label, autofocus: true, placeholder: 'email' %>
    <%= f.input :password, wrapper: :no_label, placeholder: 'password' %>
    <div class="form-group clearfix">
        <div class="pull-right">
            <%= link_to [:new, :users, :passwords, :token], class: "btn btn-sm btn-info", data: { toggle: "tooltip"}, title: "Reset Password" do %>
                <i class="fa fa-lock"></i>
            <% end %>
            <button class="btn btn-sm btn-primary" id="session_form_submit" data-disable="Please Wait..."><i class="fa fa-sign-in"></i> Sign In</button>
        </div>
    </div>

    <div class="form-group">
        <p class="text-center remove-margin"><small>Don't have an account? <%= link_to 'Sign Up', [:new, :users, :sign_up] %>.</small></p>
    </div>
<% end %>

