<% content_for :title do %>Edit <%= post.to_s %><% end %>

<% content_for :header do %>Edit Post<% end %>

<% content_for :breadcrumbs do %>
    <li><%= link_to 'Blog', [:admin, :blog, :posts] %></li>
    <li><%= link_to post.to_s, [:admin, :blog, post] %></li>
    <li><%= link_to 'Edit', [:edit, :admin, :blog, post] %></li>
<% end %>

<%= simple_form_for @post, url: [:admin, :blog, @post], html: { class: 'form-horizontal' } do |f| %>
    <%= f.input :title, wrapper: :medium_input %>
    <%= f.input :body, input_html: { rows: 10 } %>
    <%= f.input :summary %>
    <%= f.input :tag_list, wrapper: :medium_input, input_html: { class: 'input-tags' } %>
    <%= f.input :status, wrapper: :small_input, input_html: { class: 'select-chosen' }, include_blank: false %>

    <div class="form-group">
        <div class="col-md-5 col-md-offset-2">
            <%= f.button :submit, 'Update post', data: { disable_with: 'Updating...' }, id: 'post_submit', class: 'btn btn-primary' %>
        </div>
    </div>
<% end %>